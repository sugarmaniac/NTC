<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingEnd="8dp">
    
    <ImageView
        android:id="@+id/fragmentThumbnail"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toTopOf="@id/fragmentThumbnail"
        app:layout_constraintBottom_toBottomOf="@id/fragmentThumbnail"
        app:layout_constraintEnd_toEndOf="@id/fragmentThumbnail"
        app:layout_constraintStart_toStartOf="@id/fragmentThumbnail"
        android:src="@drawable/ic_baseline_play_circle_outline_24"
        />

</androidx.constraintlayout.widget.ConstraintLayout>